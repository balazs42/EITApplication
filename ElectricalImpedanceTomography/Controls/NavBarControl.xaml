<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:ElectricalImpedanceTomography.Controls"
             x:Class="ElectricalImpedanceTomography.Controls.NavBarControl">
    <ContentView.Resources>
        <Style x:Key="NavBarButtonStyle" TargetType="Button">
            <Setter Property="FontSize" Value="Medium"/>
            <Setter Property="TextColor" Value="White"/>
            <Setter Property="BackgroundColor" Value="#555555"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontFamily" Value="Roboto-Bold"/>
            <Setter Property="Margin" Value="5,0"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="MinimumHeightRequest" Value="30"/>

            <Setter Property="VisualStateManager.VisualStateGroups">
                <VisualStateGroupList>
                    <VisualStateGroup x:Name="CommonStates">

                        <VisualState x:Name="Normal">
                            <VisualState.Setters>
                                <Setter Property="Scale" Value="1.0" />
                                <Setter Property="BackgroundColor" Value="#555555" />
                                <Setter Property="Opacity" Value="1.0"/>
                            </VisualState.Setters>
                        </VisualState>

                        <VisualState x:Name="Pressed">
                            <VisualState.Setters>
                                <Setter Property="BackgroundColor" Value="#444444" />
                                <Setter Property="Scale" Value="0.95" />
                            </VisualState.Setters>
                        </VisualState>

                    </VisualStateGroup>
                </VisualStateGroupList>
            </Setter>
        </Style>
        
    </ContentView.Resources>

    <Border Padding="10,5" BackgroundColor="#333333">
        <Border.StrokeShape>
            <RoundRectangle CornerRadius="0"/>
        </Border.StrokeShape>

        <HorizontalStackLayout Spacing="50" HorizontalOptions="Center">

            <Button x:Name="MainPageButton"
                    Text="Main"
                    Style="{StaticResource NavBarButtonStyle}"
                    Clicked="NavigateButton_Clicked" >
                <Button.Shadow>
                    <Shadow Brush="#222222" Opacity="1.0" Radius="1.0" Offset="1.0, 1.0"/>
                </Button.Shadow>
            </Button>

            <Button x:Name="DAQPageButton"
                    Text="DAQ"
                    Style="{StaticResource NavBarButtonStyle}"
                    Clicked="NavigateButton_Clicked" >
                <Button.Shadow>
                    <Shadow Brush="#222222" Opacity="1.0" Radius="1.0" Offset="1.0, 1.0"/>
                </Button.Shadow>
            </Button>

            <Button x:Name="ReconstructionPageButton"
                    Text="EIT Reconstruction" Style="{StaticResource NavBarButtonStyle}"
                    Clicked="NavigateButton_Clicked">
                <Button.Shadow>
                    <Shadow Brush="#222222" Opacity="1.0" Radius="1.0" Offset="1.0, 1.0"/>
                </Button.Shadow>
            </Button>
        </HorizontalStackLayout>
    </Border>
</ContentView>